<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.github.florent37.expansionpanel.ExpansionHeader
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/sampleHeader"
        app:expansion_headerIndicator="@id/headerIndicator"
        app:expansion_layout="@id/expansionLayout"
        app:expansion_toggleOnClick="true">

        <RelativeLayout
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:background="@drawable/panelgradient"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <!--  <TextView
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Trip name"
                  android:textColor="#3E3E3E" /> -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/document"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:text="Domain Registration"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <android.support.v7.widget.AppCompatImageView
                android:adjustViewBounds="true"
                android:id="@+id/headerIndicator"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

        </RelativeLayout>

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/expansionLayout"
        app:expansion_expanded="false"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:text="Choosing a domain name or a website name is the most important task toward creating your online web presence. TechKshetra Info Solutions Pvt. Ltd. will help you get the best domain names and we are one of the most sought after Domain resellers. We provide affordable domain name registration service. Our online domain registration extensions include .com / .net / .org . Registering an accredited domain name is one of the most important decisions you can make for your official online identity."/>
        </LinearLayout>

    </com.github.florent37.expansionpanel.ExpansionLayout>

</LinearLayout>