<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customtool">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolgrade1">
        <item name="android:background">@drawable/toolgradient</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolgrade2">
        <item name="android:background">@drawable/tool2</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolgrade3">
        <item name="android:background">@drawable/tool3</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolgrade4">
        <item name="android:background">@drawable/toolgradeone</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="toolgrade5">
        <item name="android:background">@drawable/toolgradetwo</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
